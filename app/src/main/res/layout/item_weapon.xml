<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="16dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="16dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/weapon_img"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_alignParentLeft="true"
            android:layout_marginVertical="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="16dp"
            />

        <TextView
            android:textColor="@color/black"
            android:id="@+id/weapon_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/weapon_img"
            android:layout_marginEnd="16dp"
            android:text="Fruit Name"
            android:textSize="24dp"
            />

        <TextView
            android:textColor="@color/black"
            android:id="@+id/weapon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="Fruit Color"
            android:textSize="24dp"
            android:layout_alignLeft="@id/weapon_id"
            android:layout_below="@id/weapon_id"
            />

        <TextView
            android:textColor="@color/black"
            android:id="@+id/weapon_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="Fruit Taste"
            android:textSize="24dp"
            android:layout_alignLeft="@id/weapon_id"
            android:layout_below="@id/weapon_name"
            />

    </RelativeLayout>


</androidx.cardview.widget.CardView>